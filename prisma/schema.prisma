// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String?
}

model ReportConfig {
  id              Int      @id @default(autoincrement())
  platform        String
  metrics         String   // store as comma-separated or JSON string
  level           String
  dateRangeEnum   String   // "last7", "last14", "last30", "lifetime", "custom"
  customDateFrom  DateTime?
  customDateTo    DateTime?
  cadence         String
  delivery        String
  email           String?
  generatedReports GeneratedReport[]
  createdAt       DateTime @default(now())
}

model GeneratedReport {
  id             String       @id @default(cuid())
  reportConfigId Int
  reportConfig   ReportConfig @relation(fields: [reportConfigId], references: [id], onDelete: Cascade)
  data           Json
  platform       String
  dateRangeEnum  String
  createdAt      DateTime     @default(now())

  @@index([reportConfigId])
}
