// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String?
}

model ReportConfig {
  id              Int      @id @default(autoincrement())
  platform        String
  metrics         String    // store as comma-separated or JSON string
  level           String
  dateRangeEnum   String    // "last7", "last14", "last30", "lifetime", "custom"
  customDateFrom  DateTime?
  customDateTo    DateTime?
  cadence         String
  delivery        String
  email           String?   // Optional in case that user wants exposed link
  generatedReports GeneratedReport[]
  metadata        Json
  createdAt       DateTime @default(now())
}

// I arbitrarily require that all GeneratedReport types should include their associated Report Config
model GeneratedReport {
  id             String       @id @default(cuid())
  reportConfigId Int
  reportConfig   ReportConfig @relation(fields: [reportConfigId], references: [id], onDelete: Cascade)
  data           Json         @default("{}")
  summary        String
  platform       String       // should prob delete platform, enum later & deal with attached obj
  dateRangeEnum  String
  metadata       Json         @default("{}")
  createdAt      DateTime     @default(now())

  @@index([reportConfigId])
}
